<div class='container'>
  <div class='row'>
    <div class='col-sm-4 col-sm-offset-4'>
      <h1 class='text-center title'>Sign in</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <div class='controls with-icon-over-input'>
            <%= f.email_field :email, :required => true, :class => 'form-control', :autofocus => true, :placeholder => 'Username', :input_html => {:size => 50} %>
          </div>
        </div>  
        <div class='form-group'>
          <div class='controls with-icon-over-input'>
            <%= f.password_field :password, :required => true, :class => 'form-control', :placeholder => 'Password', :input_html => {:size => 50} %>
          </div>
        </div>
        <div class='checkbox'>
          <label for='remember_me'>
            <%= f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable? %>
            Remember me
          </label>
        </div>
        <button class='btn btn-block'>Sign in</button>
      <% end %>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class='col-sm-12'>
      <div class='text-center'>
        <%= render "devise/shared/links" %>
        <div> <%=  link_to 'Customer Sign up', customer_signup_path %></div>
        <div> <%=  link_to 'Business Sign up', business_signup_path %></div>
      </div>
    </div>
  </div>
</div>
