<div class="section section-breadcrumbs">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1><%= current_user.profile.class == Business ? "Profile" : "Business"%></h1>
      </div>
    </div>
  </div>
</div>

<% if current_user.profile.class == Business %>
  <div class="section">
    <div class="container">
      <div class="row">
        <div class="col-sm-2">
          <%= link_to "Announcement", "javascript:void(0)"%>
        </div>
        <div class="col-sm-2">
          <%= link_to "Business Information", edit_business_path(@business) %>
        </div>
        <div class="col-sm-2">
          <%= link_to "Reviews and Comments", "javascript:void(0)"%>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-sm-1">
        <strong>Name: </strong>
      </div>
      <div class="col-sm-10">
        <%= @business.name %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-1">
        <strong>Phone: </strong>
      </div>
      <div class="col-sm-10">
        <%= @business.phone %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-1">
        <strong>Address: </strong>
      </div>
      <div class="col-sm-10">
        <%= @business.add1 %> <%= @business.add2 %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-1">
        <strong>City: </strong>
      </div>
      <div class="col-sm-10">
        <%= @business.city %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-1">
        <strong>State: </strong>
      </div>
      <div class="col-sm-10">
        <%= @business.state %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-1">
        <strong>Zip: </strong>
      </div>
      <div class="col-sm-10">
        <%= @business.zip %>
      </div>
    </div>
  </div>
</div>



<% if current_user.profile.class == Customer %>
  <div class="section">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <h2>Review and comments<h2>
        </div>
      </div>  
      <div class="row">
        <div class="col-sm-10">
        </div>
        <div class="col-sm-1">
          <%= link_to "Add Review", "javascript:void(0)", class: "btn"%>
        </div>
        <div class="col-sm-1">
          <%= link_to "Rating", "javascript:void(0)", class: "btn"%>
        </div>
      </div>
      <div class="row">  
        <div class="col-sm-2">
          Customer 1::
        </div>
      </div>
      <div class="row">  
        <div class="col-sm-1">
        </div>
        <div class="col-sm-11">
          <p>It is good and I love it </p>
        </div>
      </div>
      <div class="row">  
        <div class="col-sm-2">
          Customer 2::
        </div>
      </div>
      <div class="row">  
        <div class="col-sm-1">
        </div>
        <div class="col-sm-11">
          <p>It is awesome business, i like this business</p>
        </div>
      </div>
    </div>
  </div>
<% end %>
