<h2>Provider Details</h2>

<% unless @provider.blank? %>
  <div class="table-responsive">
    <table data-toggle="table" class="table table-bordered table-hover top-margin-20">
      <tr>
        <th>Title</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Suffix(es)</th>
        <th>Email</th>
        <th>Office Phone</th>
        <th>Mobile Phone</th>
        <th>Fax</th>
        <th>Website</th>
        <th>Affiliated Companies</th>
        <th>Company Name</th>
        <th>Profession</th>
        <th>Billing Address</th>
        <th>Billing City</th>
        <th>Billing State</th>
        <th>Billing Zip</th>
        <th>Logo</th></tr></thead><tbody>      <tr>
        <% suffixes = @provider.provider_suffixes.collect {|p| p.suffix.name} %>
        <td><%= @provider.title %></td>
        <td><%= @provider.first_name %></td>
        <td><%= @provider.last_name %></td>
        <td><%= suffixes.join(" , ") %></td>
        <td><%= @provider.email %></td>
        <td><%= @provider.office_phone %></td>
        <td><%= @provider.mobile_phone %></td>
        <td><%= @provider.fax %></td>
        <td><%= @provider.website %></td>
        <td><%= @provider.affiliated_companies %></td>
        <td><%= @provider.company_name %></td>
        <td><%= @provider.try(:provider_profession).try(:name) %></td>
        <td><%= @provider.billing_address %></td>
        <td><%= @provider.billing_city %></td>
        <td><%= @provider.billing_state %></td>
        <td><%= @provider.billing_zip %></td>
        <td><%= @provider.logo %></td>
      </tr>
    </tbody></table>
  </div>
<% else %>
  <p>There are no providers.</p>
<% end %>
