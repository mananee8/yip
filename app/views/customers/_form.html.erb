<div class='container'>
  <div class='row'>
    <div class='col-sm-4 col-sm-offset-4'>
      <h1 class='text-center title'>Customer Sign Up</h1>
      <%= simple_nested_form_for(@customer, html: { :class=>"form form-horizontal" }) do |f| %>
        <div class="form-group">
          <div class='controls with-icon-over-input'>
            <%= f.text_field :name, :class => 'form-control', :placeholder => 'Customer name', :input_html => {:size => 50} %>
          </div>
        </div>
        
        <div class="form-group">
          <div class='controls with-icon-over-input'>
            <%= f.text_field :username, :class => 'form-control', :placeholder => 'Customer username', :input_html => {:size => 50} %>
          </div>
        </div>
        
        <div class="form-group">
          <div class='controls with-icon-over-input'>
            <%= f.text_field :dob, :class => 'form-control', :placeholder => 'Date of birth', :input_html => {:size => 50} %>
          </div>
        </div>
        
        <div class="form-group">
          <div class='controls with-icon-over-input'>
            <%= f.text_field :location, :class => 'form-control', :placeholder => 'Customer location', :input_html => {:size => 50} %>
          </div>
        </div>
        
        <%= f.fields_for :user do |u| %>
          <div class='form-group'>
            <div class='controls with-icon-over-input'>
              <%= u.text_field :email, required: true, placeholder: "Email", class: "form-control", label: "Email", :input_html => {:size => 50} %>
            </div>
          </div>
          <div class='form-group'>
            <div class='controls with-icon-over-input'>
              <%= u.password_field :password, required: true, placeholder: "password", class: "form-control", label: "Password", :input_html => {:size => 50} %>
            </div>
          </div>
          <div class='form-group'>
            <div class='controls with-icon-over-input'>
              <%= u.password_field :password_confirmation, required: true, placeholder: "password confirmation", class: "form-control", label: "Password Confirmation", :input_html => {:size => 50} %>
            </div>
          </div>
        <% end %>
        <button class='btn btn-block'>Sign Up</button>
      <% end %>
    </div>
  </div>
</div>
